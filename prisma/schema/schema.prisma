generator client {
    provider        = "prisma-client"
    output          = "../generated"
    previewFeatures = ["postgresqlExtensions", "nativeDistinct", "relationJoins", "strictUndefinedChecks", "shardKeys", "views", "schemaEngineDriverAdapters"]
    moduleFormat    = "esm"
    runtime         = "nodejs"
}

generator json {
    provider = "prisma-json-types-generator"
}

datasource db {
    provider     = "postgresql"
    relationMode = "foreignKeys"
}
