# Database
NUXT_DATABASE_URL=postgresql://dokusho:dokusho@localhost:5432/dokusho
NUXT_DATABASE_MAX_CONNECTIONS=10

# Redis
NUXT_REDIS_URL=redis://localhost:6379

# Meilisearch
NUXT_MEILI_HOST=http://localhost:7700
NUXT_MEILI_MASTER_KEY=masterkey

# S3/MinIO
NUXT_S3_ENDPOINT=http://localhost:9000
NUXT_S3_ACCESS_KEY_ID=minioadmin
NUXT_S3_SECRET_ACCESS_KEY=minioadmin
NUXT_S3_BUCKET_NAME=dokusho

# Auth and OIDC (optional)
NUXT_AUTH_SECRET=your-secret-here-at-least-32-characters
NUXT_ENABLE_PASSWORD=true
# Set to true to disable new account registration (password auth only, OIDC can be restricted on provider side)
NUXT_DISABLE_SIGNUP=false
NUXT_PUBLIC_BASE_URL=http://localhost:3000
NUXT_CORS_ORIGINS=http://localhost:3000
NUXT_OIDC_PROVIDER_ID=
NUXT_OIDC_CLIENT_ID=
NUXT_OIDC_CLIENT_SECRET=
NUXT_OIDC_DISCOVERY_URL=
# Map OIDC groups to application roles (JSON format), key is from oidc and value is the one for this app: value can only be "user" or "admin"
# Example: {"admins":"admin","users":"user"}
NUXT_OIDC_ROLE_MAP=
# Optional display name for the SSO button (e.g., "Pocket ID"). Falls back to capitalized provider ID.
NUXT_PUBLIC_OIDC_PROVIDER_NAME=

# Scheduler
NUXT_SCHEDULER_FETCH_LATEST_CRON=*/30 * * * *
NUXT_SCHEDULER_REFRESH_ALL_CRON=0 4 * * *

# Sources
NUXT_FORCE_DISABLE_SOURCE=japscan
NUXT_SUWAYOMI_URL=http://localhost:4567

# Display
NUXT_ENABLED_LANGUAGES=En
NUXT_PRIMARY_LANGUAGE=En
NUXT_FALLBACK_PRIMARY_LANGUAGE=En

# Soft delete
NUXT_SOFT_DELETE_DELAY_DAYS=7

# Byparr (optional, for Cloudflare bypass)
NUXT_BYPARR_URL=
